<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f2f2f2">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="250dp">

			<com.youth.banner.Banner
				android:id="@+id/banner"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:image_scale_type="fit_xy"
				app:indicator_height="8dp"
				app:indicator_margin="5dp"
				app:indicator_width="8dp"
				android:background="@drawable/banner1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="32dp"
				android:layout_marginTop="35dp"
				android:layout_marginLeft="25dp"
				android:layout_marginRight="25dp">

				<TextView
					android:id="@+id/tv_city"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginRight="15dp"
					android:fontFamily="sans-serif-condensed-medium"
					android:textColor="#fff"
					android:textSize="18sp"
					android:textStyle="bold" />

				<RelativeLayout
					android:id="@+id/rl_title"
					android:layout_width="wrap_content"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:background="@drawable/searchbar_bg"
					android:alpha="0.7">

					<ImageView
						android:id="@+id/iv_search"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:src="@drawable/icon_search"
						android:padding="4dp"
						android:layout_centerVertical="true"
						android:layout_marginLeft="5dp"/>

					<TextView
						android:id="@+id/tv_search"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:layout_toRightOf="@+id/iv_search"
						android:gravity="center_vertical"
						android:text="搜索目的地"
						android:textColor="@color/navGray"
						android:textSize="15sp" />

					<ImageView
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@drawable/icon_yuyin"
						android:layout_marginRight="5dp"/>
				</RelativeLayout>

				<ImageView
					android:id="@+id/iv_msg"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_gravity="center_vertical"
					android:src="@drawable/icon_msg"
					android:layout_centerVertical="true"
					android:layout_marginLeft="15dp"/>
			</LinearLayout>
		</RelativeLayout>

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="12dp"
			app:cardCornerRadius="5dp"
			app:cardElevation="1dp"
			android:background="@color/systemWhite">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="25dp"
				android:paddingBottom="25dp">

				<LinearLayout
					android:id="@+id/ll1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:gravity="center">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:background="@drawable/icon_findcar"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:textSize="12sp"
						android:text="找车位"
						android:textColor="#bb000000"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/ll2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:gravity="center">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:background="@drawable/icon_fabu"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:textSize="12sp"
						android:text="共享车位"
						android:textColor="#bb000000"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/ll3"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:gravity="center">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:background="@drawable/icon_dingdan"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:textSize="12sp"
						android:text="我的订单"
						android:textColor="#bb000000"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/ll4"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:gravity="center">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:background="@drawable/icon_zixun"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:textSize="12sp"
						android:text="资讯"
						android:textColor="#bb000000"/>
				</LinearLayout>

			</LinearLayout>
		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			app:cardElevation="1dp"
			app:cardCornerRadius="5dp"
			android:background="@color/systemWhite">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:layout_marginLeft="15dp"
					android:text="汽车资讯"
					android:textColor="#333"
					android:textSize="15sp"/>

				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="#33000000"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="10dp"/>

				<com.example.yiting.view.MyListView
					android:id="@+id/lv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="15dp"
					android:paddingRight="15dp"
					android:divider="#33000000"
					android:dividerHeight="1px"
					android:scrollbars="none"
					android:listSelector="@android:color/transparent"/>

				<LinearLayout
					android:id="@+id/ll_more"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="15dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="查看更多"
						android:layout_gravity="center_vertical"
						android:textColor="#555"
						android:textSize="14sp"/>

					<ImageView
						android:layout_width="15dp"
						android:layout_height="15dp"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="5dp"
						android:background="@drawable/icon_more"/>

				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="30dp"
			android:layout_marginBottom="10dp"
			android:text="我是有底线的~"
			android:textSize="10sp"
			android:textColor="#aaa"/>

	</LinearLayout>

</ScrollView>