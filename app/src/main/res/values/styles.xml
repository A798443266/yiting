<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/systemColor</item>
		<item name="colorPrimaryDark">@color/systemColor</item>
		<item name="colorAccent">@color/systemColor</item>
	</style>

	<style name="pop_park_info_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/pop_parkinfo_in</item>
		<item name="android:windowExitAnimation">@anim/pop_parkinfo_out</item>
	</style>

	<style name="dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<!--边框-->
		<item name="android:windowIsFloating">true</item>
		<!--是否浮现在activity之上-->
		<item name="android:windowIsTranslucent">false</item>
		<!--半透明-->
		<item name="android:windowNoTitle">true</item>
		<!--无标题-->
		<item name="android:windowBackground">@android:color/transparent</item>
		<!--背景透明-->
		<item name="android:backgroundDimEnabled">true</item>
		<!--模糊-->
	</style>

</resources>
